@if (ViewBag.Message != null)
{
    <input type="hidden" id="modal" value="#successModal" />
    @Html.Partial("_Success", (string)ViewBag.Message)

}
@if (ViewBag.Error != null)
{
    <input type="hidden" id="modal" value="#errorModal" />
    @Html.Partial("_Error", (string)ViewBag.Error)

}
@if (ViewBag.Info != null)
{
    <input type="hidden" id="modal" value="#infoModal" />
    @Html.Partial("_Info", (string)ViewBag.Info)

}
