@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication

@model LoginViewModel
@{
    ViewData["Title"] = "Log in";
}
@*<script src='https://www.google.com/recaptcha/api.js'></script>*@
<style>
    .input-group .form-control {
        margin-bottom: 0 !important;
    }

    .password-field .input-group-addon {
        cursor: pointer;
    }

    input#CaptchaCode {
        border: none;
        height: 73px;
        margin: 0;
        border-radius: 0;
        padding: 7px;
        box-shadow: none;
        font-size: 20px;
    }
     ::-webkit-input-placeholder { /* Chrome/Opera/Safari */
        font-size: 12px;
    }

    ::-moz-placeholder { /* Firefox 19+ */
        font-size: 12px;
    }
</style>
<div class="row">
    <div class="col-md-12">
        <section>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <h1>MCH MIS Login</h1>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Email" placeholder="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class='input-group password-field'>
                        <input asp-for="Password" placeholder="Password" class="form-control" />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-eye-open"></span>
                        </span>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group input-group">
                    <span class="input-group-btn">
                        <img id="captcha-code" src="~/get-captcha-image" alt="Refresh page to load Captcha code">
                    </span>
                    <input type="text" placeholder="Type captcha code here" asp-for="CaptchaCode" maxlength="4" autocomplete="off" />
                </div>
                <div class="form-group">
                    <p>&nbsp;</p>
                    <hr />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default pull-right">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a class="pull-left" asp-action="ForgotPassword">Forgot your password?</a>
                    </p>
                </div>
                <input type="hidden" id="recaptcha-response" name="RecaptchaResponse" />
            </form>
        </section>
    </div>
