@model MCHMIS.ViewModels.CommunityValidationApprovalsViewModel
@{
    ViewBag.Title = "Generate M&E List?";
    Layout = "~/Views/Shared/_LayoutPopup.cshtml";
}

@using (Html.BeginForm("GenerateForms", "CommunityValidation", FormMethod.Post, new { @class = "form-vertical", role = "form" }))

{
    <div class="form-vertical">
        <div class="col-md-12">
            @if (ViewBag.Count > 0)
            {
                <p>Households to be generated: @ViewBag.Count</p>
            }
            else
            {
                <p>No households found for Monitoring and Evaluation.</p>
            }


           
        </div>

        <div class="col-md-12">
            <hr />
            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
        @if (ViewBag.Count > 0)
        {
            <button type="submit" class="btn btn-success pull-right">
                <i class="glyphicon glyphicon-ok-sign"></i> Generate
            </button>
        }
        </div>
        @Html.HiddenFor(m => m.Id)
    </div>
}