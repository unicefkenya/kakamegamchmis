@model IEnumerable<MCHMIS.ViewModels.EnrolmentListSummaryViewModel>

@{
    ViewData["Title"] = "Enrolment List Summary";
}
@section buttons
    {
    <a class="btn btn-primary" asp-route-id="@ViewBag.Id" asp-action="Details">View Details</a>
}
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Facility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubCounty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ward)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Generated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Validated)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Facility)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubCounty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ward)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Generated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Validated)
                </td>
            </tr>
        }
    </tbody>
</table>