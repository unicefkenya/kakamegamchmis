@model IEnumerable<Enrolment>

@{
    ViewData["Title"] = "Enrolment Lists";
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HouseholdsGenerated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HouseholdsValidated)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedById)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateApproved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApprovedBy)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApprovalNotes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateImported)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImportedById)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImportDateApproved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImportApprovedById)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImportStatusId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImportApprovalNotes)
            </th>
            <th class="fit">Summary</th>
            <th class="fit">Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HouseholdsGenerated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HouseholdsValidated)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy.DisplayName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateApproved)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApprovedBy.DisplayName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApprovalNotes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateImported)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImportedBy.DisplayName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ImportDateApproved)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImportApprovedBy.DisplayName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImportStatus.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImportApprovalNotes)
                </td>
                <td class="text-center">
                    <a asp-action="Summary" class="fa fa-eye" asp-route-id="@item.Id"></a>
                </td>
                <td class="text-center">
                    <a asp-action="Details" class="fa fa-eye" asp-route-id="@item.Id"></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Index" class="btn btn-danger glyphicon glyphicon-step-backward pull-left"> Back</a>