@using Newtonsoft.Json
@model MCHMIS.ViewModels.CVListGenerateViewModel
@{
    ViewBag.Title = "Run Batch IPRS Check?";

    Layout = "~/Views/Shared/_LayoutPopup.cshtml";
}

<form asp-action="IPRSCheck">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" value="1" name="Id"/>
    <div class="col-md-12">
    @if (ViewBag.Count > 0)
    {
        <p>Number of households to be checked: @ViewBag.Count</p>
    }
    else
    {
        <p>No beneficiaries ready for IPRS check</p>
    }
    </div>
    <div class="col-md-12">
        <hr />
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
        @if (ViewBag.Count > 0)
        {
            <button type="submit" class="btn btn-success pull-right">
                <i class="glyphicon glyphicon-ok-sign"></i> Check
            </button>
        }
    </div>
</form>