@model MCHMIS.ViewModels.FamilyPlanningViewModel

@{
    ViewData["Title"] = "FAMILY PLANNING";
}

@Html.Partial("_Menu")
<div class="row delivery-data">
    <form asp-action="FamilyPlanning">
        <input type="hidden" asp-for="PregnancyId" />
        <input type="hidden" asp-for="OptionId" />
        <div class="col-md-6">
            <div class="x_panel">
                <div class="x_title">
                    <h2>RECORD NEW</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group col-md-12">
                        <label asp-for="VisitDate" class="control-label"></label>
                        <div class='input-group date'>
                            <input asp-for="VisitDate" type="text" class="form-control required no-typing" autocomplete="off" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                        <span asp-validation-for="VisitDate" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="Notes" class="control-label"></label>
                        <textarea asp-for="Notes" class="form-control"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="NextVisit" class="control-label"></label>
                        <div class='input-group date-future'>
                            <input asp-for="NextVisit" type="text" class="form-control required no-typing" autocomplete="off" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                        <span asp-validation-for="NextVisit" class="text-danger"></span>
                    </div>
                    <div class="col-md-12">
                        @if (Model.StatusId == 1)
                        {
                            <div class="form-group">
                                <button type="submit" class="btn btn-success pull-right">
                                    <i class="glyphicon glyphicon-ok-sign"></i> @(!string.IsNullOrEmpty(Model.OptionId) ? "Update" : "Save")
                                </button>
                                <a asp-action="Index" class="btn btn-danger glyphicon glyphicon-step-backward pull-left"> Back</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="x_panel">
                <div class="x_title">
                    <h2>PREVIOUS RECORDS</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.VisitDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Notes)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NextVisit)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DateCreated)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreatedBy)
                                </th>
                                @if (Model.StatusId == 1)
                                {
                                    <th class="fit">Edit</th>

                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.FamilyPlannings)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.VisitDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Notes)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NextVisit)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateCreated)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedBy.DisplayName)
                                    </td>
                                    @if (Model.StatusId == 1)
                                    {
                                        <td>
                                            <a asp-action="FamilyPlanning" class="fa fa-pencil" asp-route-optionId="@item.Id" asp-route-id="@item.PregnancyId"></a>
                                        </td>
                                    }
                                </tr>
                            }
                            @if (!Model.FamilyPlannings.Any())
                            {
                                <tr>
                                    <td colspan="6" class="dataTables_empty">
                                        No data found.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </form>
</div>
@section scripts
{
    <script type="text/javascript" src="~/js/bootstrap-multiselect.js"></script>
    <link rel="stylesheet" href="~/css/bootstrap-multiselect.css" type="text/css" />
    <script>
        $(document).ready(function () {
            $('.multiple').multiselect();
        });
    </script>
}