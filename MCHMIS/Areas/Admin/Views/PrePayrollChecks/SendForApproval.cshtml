@model MCHMIS.ViewModels.PrePayrollApprovalActionViewModel
@{
    ViewBag.Title = "Send for approval?";
    Layout = "~/Views/Shared/_LayoutPopup.cshtml";
}

@using (Html.BeginForm("Send", "PrePayrollChecks", FormMethod.Post, new { @class = "form-vertical", role = "form" }))

{
    <div class="form-vertical">
        @if (Model.PrePayrollCheck.Imported)
        {
            <div class="col-md-12">
                Send Fund Pre-Payroll Checks for <strong>@Model.PrePayrollCheck.PaymentCycle.Name</strong> for approval?
            </div>
            <div class="col-md-12">
                <strong>Date Created: </strong>@Model.PrePayrollCheck.DateCreated.ToString("dd-MM-yyyy")
            </div>
            <div class="col-md-12">
                <strong>Created by: </strong>@Model.PrePayrollCheck.CreatedBy.Name
            </div>

            <div class="col-md-12">
                <hr />
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                <input type="submit" value="Send" class="btn pull-right btn-primary" />
            </div>
        }
        else
        {
            <div class="col-md-12 text-danger">
                <p>Phone numbers validation not yet done.</p>
                <a asp-action="PhoneNumberValidation" asp-route-id="@Model.PrePayrollCheck.Id">
                    <i class="fa fa-mobile-phone" aria-hidden="true"></i> Click here to Download the list for validation
                </a>
            </div>
            <div class="col-md-12">
                <hr />
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
            </div>
        }

        @Html.HiddenFor(m => m.Id)
    </div>
}