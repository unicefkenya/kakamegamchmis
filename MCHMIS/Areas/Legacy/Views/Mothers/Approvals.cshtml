                        @Html.DisplayFor(model => model.DOB)
                    </td>
                </tr>
                <tr>
                    <td class="text-bold">
                        @Html.DisplayNameFor(model => model.Notes):
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Notes)
                    </td>
                </tr>
                <tr>
                    <td class="text-bold fit">Supporting Document:</td>
                    <td>
                        @if (Model.SupportingDocument != null)
                        {
                            <a href="~/uploads/legacy/@Model.SupportingDocument" target="_blank">
                                <i class="fa fa-file-pdf-o"></i>
                            </a>
                        }
                    </td>
                </tr>
            </table>
            <form asp-action="Approvals">
                <div class="col-md-12 action-cont no-margin">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ApprovalNotes" class="control-label"></label>

                        <textarea asp-for="ApprovalNotes" id="Notes" class="form-control"></textarea>
                        <span asp-validation-for="ApprovalNotes" class="text-danger"></span>
                        <span class="field-validation-valid notes-error text-danger">*Notes are required while rejecting records.</span>
                    </div>
                    <div class="form-group padding-top-30">
                        <a asp-action="Index" class="btn btn-default glyphicon glyphicon-step-backward"> Back</a>
                        <input type="hidden" name="StatusId" id="action" />
                        <button type="submit" class="btn btn-success pull-right btn-approve">
                            <i class="glyphicon glyphicon-ok-sign"></i> Approve
                        </button>
                        <button type="submit" class="btn btn-danger pull-right btn-reject  margin-right-15">
                            <i class="glyphicon glyphicon-remove"></i> Reject
                        </button>
                        <input type="hidden" name="Action" id="action" />
                    </div>
                </div>
            </form>

            @if (Model.DirtyList.Any())
            {
                <p>&nbsp;</p>
                <h2 class="text-danger">Other Exceptions</h2>
                <div class="scrollable">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Mother.M_Names)
                            </th>
                            <th>
