<div class="col-md-6 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Update</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content sectiona" style="min-height: 300px">
            <table class="table table-bordered table-striped">
                <tr>
                    <td class="text-bold">
                        @Html.DisplayNameFor(model => model.Exception):
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Exception)
                    </td>
                </tr>

                <tr>
                    <td width="200" class="text-bold">
                        @Html.DisplayNameFor(model => model.NationalId):
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.NationalId)
                    </td>
                </tr>
