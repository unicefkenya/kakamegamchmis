@using Newtonsoft.Json

@model MCHMIS.Areas.Reports.ViewModels.ComplaintsReportViewModel

@if (Model.Complaints != null)
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Complaint.ComplaintType.CategoryId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Complaint.ComplaintTypeId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Complaint.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Complaint.ComplaintDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Complaint.Name)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Complaint.IdNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Complaint.Phone)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Complaint.HealthFacility)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Complaint.Village.Ward.SubCountyId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Complaint.Village.Ward)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Complaint.Village)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Complaint.StatusId)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Complaints)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ComplaintType.Name)
                        @Html.DisplayFor(modelItem => item.OtherComplaintType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ComplaintDate)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.IdNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.HealthFacility.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Village.Ward.SubCounty.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Village.Ward.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Village.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status.Name)
                    </td>
                </tr>
            }
        </tbody>
        @if (Model.Complaints.Any())
        {
            <tfoot>
                <tr>
                    <td colspan="11">
                        <strong>Total</strong>
                    </td>
                    <td>
                        <strong>
                            @Html.DisplayFor(modelItem => Model.Total)
                        </strong>
                    </td>
                </tr>
            </tfoot>
        }
    </table>
}