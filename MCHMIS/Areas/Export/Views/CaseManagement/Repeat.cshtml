@using Newtonsoft.Json

@model MCHMIS.Areas.Reports.ViewModels.CaseManagementListViewModel

@{
}

@if (Model.RepeatCases != null)
{

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RepeatCase.UniqueId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RepeatCase.BeneficiaryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RepeatCase.RecipientPhone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RepeatCase.HealthFacility)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RepeatCase.SubCounty)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RepeatCase.Ward)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RepeatCase.Village)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.RepeatCases)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UniqueId)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.BeneficiaryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RecipientPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HealthFacility)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubCounty)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ward)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Village)
                    </td>
                </tr>
            }
            @if (!Model.RepeatCases.Any())
            {
                <tr>
                    <td class="dataTables_empty" colspan="10">
                        No data found.
                    </td>
                </tr>
            }
        </tbody>
        @if (Model.RepeatCases.Any())
        {
            <tfoot>
                <tr>
                    <td colspan="6">
                        <strong>Total</strong>
                    </td>
                    <td>
                        <strong>
                            @Html.DisplayFor(modelItem => Model.Total)
                        </strong>
                    </td>
                </tr>
            </tfoot>
        }
    </table>

}