@using Newtonsoft.Json

@model MCHMIS.Areas.Reports.ViewModels.CaseManagementListViewModel

@{
}

@if (Model.MotherClinicVisits != null)
{
    <table class="table table-striped table-bordered ">
        <thead>
            <tr>
                <th>Unique ID</th>
                <th>
                    @Html.DisplayNameFor(model => model.Household.Mother.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Household.Mother.MiddleName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Household.Mother.Surname)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Household.HealthFacilityId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Household.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Household.EDD)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Household.Village.Ward.SubCountyId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Household.Village.WardId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Household.Village.Name)
                </th>
                <th>
                    Clinic Visit
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MotherClinicVisit.VisitDate)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.MotherClinicVisits)
            {
                <tr>
                    <td> @Html.DisplayFor(modelItem => item.Pregnancy.CaseManagement.Household.UniqueId)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pregnancy.CaseManagement.Household.Mother.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pregnancy.CaseManagement.Household.Mother.MiddleName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pregnancy.CaseManagement.Household.Mother.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pregnancy.CaseManagement.Household.HealthFacility.Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Pregnancy.CaseManagement.Household.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pregnancy.CaseManagement.Household.EDD)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pregnancy.CaseManagement.Household.Village.Ward.SubCounty.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pregnancy.CaseManagement.Household.Village.Ward.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pregnancy.CaseManagement.Household.Village.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClinicVisit.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VisitDate)
                    </td>
                </tr>
            }
            @if (!Model.MotherClinicVisits.Any())
            {
                <tr>
                    <td colspan="15" class="dataTables_empty">No data found.</td>
                </tr>
            }
        </tbody>
        @if (Model.MotherClinicVisits.Any())
        {
            <tfoot>
                <tr>
                    <td colspan="11">
                        <strong>Total</strong>
                    </td>
                    <strong>@(Model.Summaries.Sum(i => i.Beneficiaries).ToString("###,##0"))</strong>
                    <td class="text-center">
                        <strong>@(Model.Total.ToString("###,##0"))</strong>
                    </td>
                </tr>
            </tfoot>
        }
    </table>

}