@using MCHMIS.Areas.Reports.ViewModels

@model MCHMIS.Areas.Reports.ViewModels.CaseManagementListViewModel

@if (Model.Summaries != null)
{
    <table id="table-only" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    Delivery Health Facility
                </th>
                <th>
                    Registered Heath Facility
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WardSummary.Beneficiaries)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Summaries)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Facility)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Beneficiaries)
                    </td>
                </tr>
            }
            @if (!Model.Summaries.Any())
            {
                <tr>
                    <td colspan="3" class="dataTables_empty">
                        No data found.
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2">
                    <strong>Total</strong>
                </td>
                <td>
                     <strong>@Model.Summaries.Sum(i => i.Beneficiaries).ToString("##,###")</strong>
                </td>
            </tr>
        </tfoot>
    </table>

}