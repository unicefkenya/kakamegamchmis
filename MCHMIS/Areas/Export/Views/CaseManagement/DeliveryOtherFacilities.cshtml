@using Newtonsoft.Json

@model MCHMIS.Areas.Reports.ViewModels.CaseManagementListViewModel

@{
}

@if (Model.Children != null)
{
    <table class="table table-striped table-bordered ">
        <thead>
            <tr>
                <th>Unique ID</th>
                <th>
                    @Html.DisplayNameFor(model => model.Household.Mother.FullName)
                </th>

                <th>
                    Registered Heath Facility
                </th>
                <th>
                    Delivery Health Facility
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Household.Phone)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Household.Village.Ward.SubCountyId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Household.Village.WardId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Household.Village.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Household.EDD)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Delivery.DeliveryDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Delivery.PregnancyDuration)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Delivery.PregnancyOutcomeId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Delivery.DeliveryModeId)
                </th>
                <th>Child Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Children)
            {
                <tr>
                    <td> @Html.DisplayFor(modelItem => item.Delivery.Pregnancy.CaseManagement.Household.UniqueId)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Delivery.Pregnancy.CaseManagement.Household.Mother.FullName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Delivery.Pregnancy.CaseManagement.Household.HealthFacility.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeliveryHealthFacility.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Delivery.Pregnancy.CaseManagement.Household.Phone)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Delivery.Pregnancy.CaseManagement.Household.Village.Ward.SubCounty.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Delivery.Pregnancy.CaseManagement.Household.Village.Ward.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Delivery.Pregnancy.CaseManagement.Household.Village.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Delivery.Pregnancy.CaseManagement.Household.EDD)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Delivery.DeliveryDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Delivery.PregnancyDuration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Delivery.PregnancyOutcome.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Delivery.DeliveryMode.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayName)
                    </td>
                </tr>
            }
            @if (!Model.Children.Any())
            {
                <tr>
                    <td colspan="15" class="dataTables_empty">No data found.</td>
                </tr>
            }
        </tbody>
        @if (Model.Children.Any())
        {
            <tfoot>
                <tr>
                    <td colspan="13">
                        <strong>Total</strong>
                    </td>
                    <td>
                       <strong>@Html.DisplayFor(modelItem => modelItem.Total)</strong>
                    </td>
                </tr>
            </tfoot>
        }
    </table>

}