@using MCHMIS.Areas.Reports.ViewModels

@model MCHMIS.Areas.Reports.ViewModels.ChangesReportListViewModel

@if (Model.Summaries != null)
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    Update
                </th>
                <th class="fit">
                    @Html.DisplayNameFor(model => model.Summary.Count)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Summaries)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>

                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Count)
                    </td>
                </tr>
            }
        </tbody>
        @if (Model.Summaries.Any())
        {
            <tfoot>
                <tr>
                    <td>
                        <strong>Total</strong>
                    </td>
                    <td class="text-center">
                        <strong>@Model.Summaries.Sum(i => i.Count)</strong>
                    </td>
                </tr>
            </tfoot>
        }
    </table>

}