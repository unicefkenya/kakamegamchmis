@using MCHMIS.Areas.Reports.ViewModels
@using X.PagedList.Mvc.Core
@model MCHMIS.ViewModels.ExportViewModel

<form class="form-paginated" asp-action="Download">

    <div class="form-group col-md-3">
        <label asp-for="ModuleId" class="control-label"></label>
        <select asp-for="ModuleId" class="form-control" asp-items="ViewBag.ModuleId"></select>
    </div>
    <div class="form-group reportId hidden col-md-3">
        <label asp-for="ReportId" class="control-label"></label>
        <select asp-for="ReportId" class="form-control" asp-items="ViewBag.ReportId"></select>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-success pull-left btn-filter inline btn-filter-report">
            Export <i class="glyphicon glyphicon-download-alt"></i>
        </button>
    </div>
    <input type="hidden" name="Page" id="pagination-page" value="1" />
    
</form>
<hr />
@section scripts
{
    <script>
        $(document).ready(function() {
            $('#ModuleId').on('change', function() {
                if ($(this).val() == 361) {
                    $('.reportId').removeClass('hidden');
                } else {
                    $('.reportId').addClass('hidden');
                }
            });
        });
    </script>
}
